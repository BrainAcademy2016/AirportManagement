<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import java.lang.String?>

<BorderPane prefHeight="840.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="userinterface.StaffController">
    <top>
        <SplitPane dividerPositions="0.5" prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <items>
                <ComboBox fx:id="switchSceneBox" value="Passengers information" minWidth="220" prefWidth="240.0" BorderPane.alignment="BOTTOM_RIGHT" onAction="#handleSwitchScene">
                <!--<items>-->
                    <!--<FXCollections fx:factory="observableArrayList">-->
                        <!--<String fx:id="passengersInfoStage" fx:value="Passengers Info" />-->
                        <!--<String fx:id="flightInfoStage" fx:value="Flight Info" />-->
                    <!--</FXCollections>-->
                <!--</items>-->
                </ComboBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="38.0" prefWidth="350.0" spacing="5.0">
               <children>
                   <Button mnemonicParsing="false" onAction="#handleAddPassenger" prefHeight="25.0" prefWidth="100.0" text="Add" />
                   <Button mnemonicParsing="false" onAction="#handleEditPassenger" prefHeight="25.0" prefWidth="100.0" text="Edit" />
                   <Button mnemonicParsing="false" onAction="#handleDeletePassenger" prefHeight="25.0" prefWidth="100.0" text="Delete" />
               </children>
            </HBox>
            </items>
        </SplitPane>
    </top>
    <center>
        <BorderPane>
            <top>
                <HBox>
                    <children>
                        <Button text="Hide filters" BorderPane.alignment="BOTTOM_LEFT" />
                    </children>
                </HBox>
            </top>
            <center>
                <TableView fx:id="passengersInfo" editable="true" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <columns>
                        <TableColumn text="ID">
                            <cellValueFactory>
                                <PropertyValueFactory property="id" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="First Name">
                            <cellValueFactory>
                                <PropertyValueFactory property="firstName" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Last Name">
                            <cellValueFactory>
                                <PropertyValueFactory property="lastName" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Nationality">
                            <cellValueFactory>
                                <PropertyValueFactory property="nationality" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Birthday">
                            <cellValueFactory>
                                <PropertyValueFactory property="birthday" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Passport">
                            <cellValueFactory>
                                <PropertyValueFactory property="passport" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Sex">
                            <cellValueFactory>
                                <PropertyValueFactory property="sex" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Class Type">
                            <cellValueFactory>
                                <PropertyValueFactory property="classType" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Flight Number">
                            <cellValueFactory>
                                <PropertyValueFactory property="flightNum" />
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                        </FXCollections>
                    </items>
                </TableView>
            </center>
        </BorderPane>
    </center>
    <left>
        <SplitPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" >
        </SplitPane>
    </left>
</BorderPane>
